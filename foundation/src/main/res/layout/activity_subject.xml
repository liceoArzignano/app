<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subject_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/subject_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="0dp"
        app:titleTextAppearance="@style/BaseTheme.ToolbarTitle"
        app:titleTextColor="?attr/colorAccent"
        tools:targetApi="lollipop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.robinhood.spark.SparkView
                android:id="@+id/subject_graph"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                app:layout_collapseMode="parallax"
                app:spark_cornerRadius="0dp"
                app:spark_lineColor="?attr/colorAccent" />

            <TextView
                android:id="@+id/subject_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/ref_info_help"
                android:drawablePadding="24dp"
                android:textColor="@color/black"
                tools:text="La tua media Ã¨ 9.50.\nPer mantenere la sufficienza devi prendere almeno 4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:alpha="0.6"
                android:background="@color/secondaryColor" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/subject_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_mark" />
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
