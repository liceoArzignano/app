<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/preferences_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="0dp"
        app:titleTextAppearance="@style/BaseTheme.ToolbarTitle"
        app:titleTextColor="@color/colorAccent" />

    <fragment
        android:name="it.liceoarzignano.curve.preferences.PreferencesFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="it.liceoarzignano.curve.preferences.PreferencesFragment" />
</LinearLayout>
