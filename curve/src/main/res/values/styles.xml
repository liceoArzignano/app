<resources>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="AppTheme.SettingsTheme" parent="@style/AppTheme.NoActionBar">
        <item name="alertDialogTheme">@style/AppTheme.PreferenceDialog</item>
    </style>

    <style name="AppTheme.PreferenceDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
