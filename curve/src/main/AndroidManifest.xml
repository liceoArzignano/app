<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="it.liceoarzignano.curve"
    tools:ignore="GoogleAppIndexingWarning">

    <application
        android:name="it.liceoarzignano.foundation.LiceoApp"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="it.liceoarzignano.foundation.marks.editor.EditorActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="it.liceoarzignano.foundation.marks.subject.SubjectActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".notes.editor.EditorActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".preferences.PreferencesActivity"
            android:label="@string/preferences_name"
            android:theme="@style/AppTheme.SettingsTheme">
            <intent-filter>
                <action android:name="android.intent.action.APPLICATION_PREFERENCES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="it.liceoarzignano.foundation.help.HelpActivity"
            android:label="@string/help_title"
            android:theme="@style/AppTheme.SettingsTheme" />

        <service
            android:name=".pings.CurvePingService"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="firebase_analytics_collection_deactivated"
            android:value="true" />

        <meta-data
            android:name="google_analytics_adid_collection_enabled"
            android:value="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <meta-data
            android:name="android:maxAspectRatio"
            android:value="2.1" />
    </application>
</manifest>
